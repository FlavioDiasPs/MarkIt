<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="MarkIt.Styles.Dictionaries.LabelDic ">

    
    <Style x:Key="TitleLabel" TargetType="Label">
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="FontFamily" Value="Courier New" />
        <Setter Property="FontSize" Value="Micro" />
    </Style>
    <Style x:Key="MoneyLabel" TargetType="Label">
        <Setter Property="TextColor" Value="ForestGreen" />
        <Setter Property="FontFamily" Value="Courier New" />
        <Setter Property="FontSize" Value="Micro" />
    </Style>
    <Style x:Key="ProductLabel" TargetType="Label">
        <Setter Property="TextColor" Value="CornflowerBlue" />
        <Setter Property="FontFamily" Value="Courier New" />
        <Setter Property="FontSize" Value="Micro" />
    </Style>

</ResourceDictionary>