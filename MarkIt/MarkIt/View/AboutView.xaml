                    <Label Text="MEET OUR SQUAD!" Font="20" TextColor="CornflowerBlue"/>
                    <StackLayout Orientation="Horizontal">
                        <Image Source="flavio.jpg" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                        <Label Text="Meet Flavio Pêgas: "/>
                        <Label Text="Role: Data Engineer at ClearSale"/>
                    </StackLayout>
                        <StackLayout Orientation="Horizontal">
                        <Image Source="" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                        <Label Text="Meet Jonas Saito: "/>
                        <Label Text="Role: Developer at ClearSale"/>
                    </StackLayout>
                    </StackLayout>
                </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>