<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarkIt.View.Product.NewProductView"
             Title="Product">


    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" x:Name="btnSalvar" Command="{Binding OnAdicionarProductCMD}" 
                     CommandParameter="{Binding BindingContext, Source={x:Reference Name=rootProduct}}" Order="Primary" Priority="1" />
        <ToolbarItem Text="Cancelar" x:Name="btnCancelar" Command="{Binding OnSairCMD}" Order="Primary" Priority="2" />
    </ContentPage.ToolbarItems>


    <ContentPage.Content>
        <StackLayout x:Name="rootProduct" Padding="7" BindingContext="{Binding Selecionado}">
            <Entry x:Name="txtNome" Placeholder="Nome" Text="{Binding Nome}" />
            <Entry x:Name="txtTitulo" Placeholder="Titulo" Text="{Binding Titulo}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>