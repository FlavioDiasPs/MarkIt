<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarkIt.View.Product.ProductView"
             NavigationPage.HasBackButton="False"
             Title="Search Products" x:Name="pageProducts">

    <!--<ContentPage.ToolbarItems>
        <ToolbarItem Text="Add product" x:Name="btnAddProduct" Command="{Binding OnNewProductCMD}" Order="Primary" Priority="1" />
        <ToolbarItem Text="Quit" x:Name="btnSair" Command="{Binding OnQuitCMD}" Order="Secondary" Priority="1" />
    </ContentPage.ToolbarItems>-->
    <ContentPage.Content>
        <Grid Padding="5" RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackLayout x:Name="laySearch" Grid.Row="0" Padding="5">
                <StackLayout Grid.Row="0" Padding="5">
                    <Button Text="Scan barcode" Clicked="Button_Clicked" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                    <Label Text="Bem-vindo, " FontSize="15"/>
                    <Label Text="{Binding Name}" FontSize="15" FontAttributes="Bold" />
                </StackLayout>
                <SearchBar  x:Name="SearchByName" Placeholder="Search by name" Text="{Binding SearchByName}" />
            </StackLayout>
            <StackLayout x:Name="layList" Grid.Row="1" Padding="7">
                <ListView x:Name="lstProduct" ItemsSource="{Binding Products}"                          
                          SelectedItem="{Binding SelectedProduct}" RowHeight="100">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.ContextActions>
                                    <!--<MenuItem Text="Edit" IsDestructive="False"
                                              Command="{Binding BindingContext.OnEditProductCMD, Source={x:Reference pageProducts}}"
                                              CommandParameter="{Binding .}" />-->
                                </ViewCell.ContextActions>
                                <StackLayout Padding="5,0,5,0">
                                    <Label Text="{Binding Name}" Font="15" />
                                    <Label Text="{Binding BestPrice, StringFormat='R$ {0:0.00}'}" Font="15" />
                                    <Grid Padding="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0" Text="{Binding BestPriceMarket}" Font="12" HorizontalOptions="Start" />
                                    </Grid>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>